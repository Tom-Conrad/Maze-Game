@model MazeApplication.Models.Player

@{
    ViewBag.Title = "Entrance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fork in the Road</h2>
<h3>You see a fork in the road.</h3>
@if (Model.VisitedLocations.Contains("entrance") == true)
{
    <h3>This place seems familiar</h3>
}

@using (Html.BeginForm("LeftFork", "Maze"))
{
    @Html.Hidden("PreviousLocation", "entrance");
    @Html.HiddenFor(m => m.Id);
    <input type="submit" class="btn btn-primary" style="float:left" value="Turn Left"/>
}

@using (Html.BeginForm("RightFork", "Maze"))
{
    @Html.Hidden("PreviousLocation", "entrance");
    @Html.HiddenFor(m => m.Id);
    <input type="submit" class="btn btn-primary" style="float:left" value="Turn Right" />
}

@using (Html.BeginForm("Exit", "Maze"))
{
    @Html.Hidden("PreviousLocation", "entrance");
    @Html.HiddenFor(m => m.Id);
    <input type="submit" class="btn btn-primary" style="float:left" value="Turn Back" />
}