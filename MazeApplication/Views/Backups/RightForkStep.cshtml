
@{
    ViewBag.Title = "Entrance";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stepsForward = ViewBag.NumOfSteps + 1;
    int stepsBack = ViewBag.NumOfSteps - 1;
    string stepsForwardAsString = stepsForward.ToString();
    string stepsBackAsString = stepsBack.ToString();
}

<h2>Another Fork</h2>
<h3>You see another fork in the road.</h3>

@using (Html.BeginForm("RightForkStep", "Maze")) {
    @Html.Hidden("NumOfSteps", stepsForwardAsString)
    <input type="submit" class="btn btn-primary" style="float:left" value="Turn Left"/>
}

@using (Html.BeginForm("RightForkStep", "Maze"))
{
    @Html.Hidden("NumOfSteps", stepsForwardAsString)
    <input type="submit" class="btn btn-primary" style="float:left" value="Turn Right" />
}

@{
    if (ViewBag.NumOfSteps == 0)
    {
        using (Html.BeginForm("RightFork", "Maze"))
        {
            @Html.Hidden("IsFamiliar", "true")
            <input type="submit" class="btn btn-primary" style="float:left" value="Turn Back" />
        }
    }
    else
    {
        using (Html.BeginForm("RightForkStep", "Maze"))
        {
            @Html.Hidden("IsFamiliar", "true")
            @Html.Hidden("NumOfSteps", stepsBackAsString)
            <input type="submit" class="btn btn-primary" style="float:left" value="Turn Back" />
        }
    }
}
